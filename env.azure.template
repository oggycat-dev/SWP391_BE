# ============================================
# AZURE DEPLOYMENT - ENVIRONMENT VARIABLES
# ============================================
# Copy file này thành .env.azure và điền thông tin thực tế
# Các giá trị này sẽ được set vào Azure App Settings

# ============================================
# DATABASE CONFIGURATION (Azure PostgreSQL)
# ============================================
ConnectionStrings__DefaultConnection="Host=your-db-server.postgres.database.azure.com;Database=tesladealerdb;Username=adminuser;Password=YourSecurePassword123!;SSL Mode=Require"

# ============================================
# APPLICATION SERVER CONFIGURATION
# ============================================
ASPNETCORE_ENVIRONMENT="Production"
ASPNETCORE_URLS="http://+:8080"
PORT="8080"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
App__Environment="Production"
App__Name="Tesla Dealer Management System"
App__Version="1.0.0"

# ============================================
# CORS CONFIGURATION
# ============================================
# Thay bằng domain frontend của bạn
Cors__AllowedOrigins__0="https://your-frontend-domain.com"
Cors__AllowedOrigins__1="https://your-frontend-domain.azurewebsites.net"

# ============================================
# LOGGING CONFIGURATION
# ============================================
Logging__LogLevel__Default="Information"
Logging__LogLevel__Microsoft="Warning"
Logging__LogLevel__Microsoft_Hosting_Lifetime="Information"
Logging__LogLevel__Microsoft_AspNetCore="Warning"
Logging__LogLevel__Microsoft_EntityFrameworkCore="Warning"

# ============================================
# JWT CONFIGURATION
# ============================================
# IMPORTANT: Thay bằng key mạnh, random, min 32 characters
JWT__SecretKey="CHANGE-THIS-TO-A-STRONG-RANDOM-KEY-MIN-32-CHARACTERS-LONG"
JWT__Issuer="TeslaDealerAPI"
JWT__Audience="TeslaDealerClients"
JWT__ExpirationMinutes="1440"

# ============================================
# ADMIN ACCOUNT CONFIGURATION (Seed Data)
# ============================================
Admin__Username="admin"
Admin__Password="Admin@Production123!"
Admin__Email="admin@tesladealer.com"
Admin__FirstName="System"
Admin__LastName="Administrator"

# ============================================
# AZURE SPECIFIC SETTINGS
# ============================================
AllowedHosts="*"

# Optional: Application Insights (nếu bạn setup)
# APPLICATIONINSIGHTS_CONNECTION_STRING="InstrumentationKey=your-key-here"

